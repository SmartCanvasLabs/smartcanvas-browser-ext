{
  "name": "Smart Canvas",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "omnibox": { "keyword": "scanvas" },
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/utils.js",
      "scripts/chromereload.js",
      "scripts/Omni.js",
      "scripts/background.js"
    ]
  },

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "background",
    "bookmarks",
    "identity",
    "identity.email",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "cookies",
    "*://*.google.com/",
    "notifications",
    "storage",
    "history"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://mail.google.com/*",
        "https://mail.google.com/*",
        "http://inbox.google.com/*",
        "https://inbox.google.com/*"
      ],
      "js": [
        "scripts/gmail-content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": ["*://*/*"],
      "js": ["scripts/contentscript.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Smart Canvas",
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    "images/icon-48.png",
    "scripts/libs/jquery-1.12.3.min.js",
    "scripts/libs/gmail.js",
    "scripts/gmail-content-main.js"
  ]
}
